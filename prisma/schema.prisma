// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Task {
  id Int @id @default(autoincrement())
  task String
  completed Boolean
}

model Users {
  id String @id @db.Char(28)
  email String @unique
  first_name String @db.VarChar(15)
  last_name String @db.VarChar(15)
  gender String
  date_of_birth DateTime @db.Date
  phone String @db.Char(11)
  reservations Reservations[]
}

model Flights {
  id Int @id
  flight String @unique
  from String
  to String
  departure_time String
  arrival_time String
  price Int
  empty_seat Empty_seats?
  reservations Reservations[]
}

model Guests {
  id String @id @default(uuid())
  email String @unique
  first_name String @db.VarChar(15)
  last_name String @db.VarChar(15)
  gender String
  date_of_birth DateTime @db.Date
  phone String @db.Char(11)
  reservation Reservations[]
}

model Passengers {
  id String @id @default(uuid())
  reservation Reservations? @relation(fields: [reservation_id], references: [id])
  reservation_id String?
  first_name String @db.VarChar(15)
  last_name String @db.VarChar(15)
  gender String
  date_of_birth DateTime @db.Date
}

model Payment_method {
  id Int @id
  status String
  reservations Reservations[]
}

model Payment_status {
  id Int @id
  status String
  reservations Reservations[]
}

model Reservations {
id String @id @default(uuid())
users Users? @relation(fields: [user_id], references: [id])
user_id String?
guests Guests? @relation(fields: [guest_id], references: [id])
guest_id String?
flight Flights @relation(fields: [flight_id], references: [id])
flight_id Int
flight_date DateTime @db.Date
number_of_passenger Int
total_price Int
appointment_date DateTime @db.Timestamp
payment_method Payment_method @relation(fields: [payment_method_id], references: [id])
payment_method_id Int
payment_status Payment_status @relation(fields: [payment_status_id], references: [id])
payment_status_id Int
passengers Passengers[]
}

model Empty_seats {
  id Int @id @default(autoincrement())
  flight Flights @relation(fields: [flight_id], references: [id])
  flight_id Int @unique
  flight_date DateTime @db.Date
  stock Int
  reserved_seat Int
}
